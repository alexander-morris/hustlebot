{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "concurrently \"cd api && npm run dev\" \"cd frontend && npm run web\"",
  "outputDirectory": "frontend/web-build",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web-build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/web-build/$1",
      "continue": true
    }
  ]
} 